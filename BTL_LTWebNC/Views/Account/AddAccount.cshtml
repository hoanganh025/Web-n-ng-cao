@model BTL_LTWebNC.Models.ViewModel.RegisterViewModel
@{
}

<h2 class="text-center mb-4">Thêm tài khoản</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="AddAccount" method="post">
                <div class="form-group">
                    <label class="control-label">Tên tài khoản</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Mật khẩu</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Nhập lại mật khẩu</label>
                    <input asp-for="RePassword" class="form-control" />
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Họ và tên</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName " class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RoleID"></label>
                    <select asp-for="RoleID" class="form-control">
                        <option value="1">Admin</option>
                        <option value="2">User</option>
                    </select>
                    <span asp-validation-for="RoleID" class="text-danger"></span>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

