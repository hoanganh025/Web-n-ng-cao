@model IEnumerable<BTL_LTWebNC.Models.EF.User>
@{
}

<h2 class="text-center">Admin quản lý tài khoản</h2>
<a class="btn btn-outline-primary mb-5" asp-controller="Account" asp-action="AddAccount">Thêm tài khoản</a>

<h2>Danh sách tài khoản</h2>

<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Full Name</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserID</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.FullName</td>
                <td>@user.Role.RoleName</td>
                <td>
                    <a asp-action="EditAccount" asp-route-id="@user.UserID" class="btn btn-primary">Edit</a>
                    <a asp-action="DeleteAccount" asp-route-id="@user.UserID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

